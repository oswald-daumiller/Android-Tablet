<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_activated="true" android:state_pressed="true"  android:drawable="@color/primary" />
    <item android:state_activated="true" android:state_pressed="false"  android:drawable="@color/primary" />
    <item android:state_enabled="false" android:state_pressed="true"  android:drawable="@color/primary" />

    <item android:state_enabled="false" android:state_pressed="false" android:drawable="@color/transparent" />
</selector>